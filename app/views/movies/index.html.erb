<h1>Discover Movies</h1>

<%= button_to 'Find Top Rated Movies', search_top_20_path, method: :get %><br>

<%= form_with url: search_movies_path, method: :post, local: true do |form| %>
  <%= form.label 'Search by Movie Title' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>
