<h1>Discover Movies</h1>

<%= form_with url: movies_path, method: :get, local: true do |form| %>
  <%= form.submit 'Find Top Rated Movies' %>
<% end %><br>

<%= form_with url: movies_path, method: :get, local: true do |form| %>
  <%= form.label 'Search by Movie Title' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>

<section class="top_40">
  <ul>
      <% if !@movies.nil? %>
        <% @movies.each do |movie| %>
          <%= link_to "#{movie.title}", movie_path(movie.movie_id), method: :get %><br>
          <%= "Vote Average #{movie.vote_average}" %><br>
          <br>
      <% end %>
    <% end %>
 </ul>
</section>
